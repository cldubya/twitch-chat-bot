@page "/"
<h3>Landing</h3>
<div class="row">
    <div>
        <button id="startBotBtn" class="btn btn-primary" @onclick="StartBot">Start</button>
    </div>
    <div>
        <button id="stopBotBtn" class="btn btn-primary" @onclick="StopBot">Stop</button>
    </div>
</div>
<div>
    <p><em>Channel Listings</em></p>

    @if (BotService.Channels == null)
    {
        <p><i>Loading...</i></p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Channel</th>
                    <th>Connected</th>
                    <th>Last Recorded Event</th>
                    <th>Last Event Time (in UTC)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var channel in BotService.Channels)
                {
                    <tr>
                        <td><i>@channel</i></td>
                        <td>Connected</td>
                        <td>Sunday</td>
                        <td>14:30:30</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
